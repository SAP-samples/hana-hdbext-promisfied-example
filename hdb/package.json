{
    "name": "sap-hdb-promisfied",
    "version": "2.202201.3",
    "description": "Promise wrapper for hdb without any depenency to @sap/hana-client",
    "main": "dist/cjs/index.js",
    "module": "dist/mjs/index.js",
    "exports": {
        ".": {
            "import": "./dist/mjs/index.js",
            "require": "./dist/cjs/index.js"
        }
    },
    "types": "./@types/index.d.ts",
    "keywords": [
        "promise",
        "hdb",
        "sap",
        "hana",
        "database"
    ],
    "author": "jung-thomas",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/SAP-samples/hana-hdbext-promisfied-example"
    },
    "dependencies": {
        "debug": "4.3.3",
        "dotenv": "14.2.0",
        "hdb": "0.19.1",
        "@sap/xsenv": "^3.1.1"
    },
    "devDependencies": {
        "@types/debug": "^4.1.7",
        "@types/node": "^17.0.10",
        "@types/sap__xsenv": "^2.0.3",
        "chai": "^4.3.4",
        "eslint": "^8.6.0"
    },
    "scripts": {
        "start": "node test",
        "lint": "./node_modules/.bin/eslint ./lib",
        "lint-local": "./node_modules/.bin/eslint ./lib --output-file=eslint.log.htm --format=html --fix",
        "validate": "npm run lint && npm run test",
        "build": "tsc -p ./tsconfig.json && tsc -p ./tsconfig-cjs.json && ./fixup",
        "types": "tsc  --declaration --allowJs --emitDeclarationOnly --outDir @types",
        "prodinstall": "npm install --only=prod"
    },
    "engines": {
        "node": ">= 0.12"
    } 
}
