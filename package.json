{
    "name": "sap-hdbext-promisfied",
    "version": "2.202108.2",
    "description": "Promise wrapper for @sap/hdbext",
    "main": "./index.cjs",
    "exports": {
        "./package.json": "./package.json",
        ".": [
            {
                "import": "./index.js",
                "require": "./index.cjs"
            },
            "./index.cjs"
        ]
    },
    "type": "module",
    "module": "./index.js",
    "types": "./@types/index.d.ts",
    "keywords": [
        "promise",
        "hdbext",
        "sap",
        "hana",
        "database"
    ],
    "author": "jung-thomas",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/SAP-samples/hana-hdbext-promisfied-example"
    },
    "dependencies": {
        "@sap/hdbext": "^7.3.1",
        "@sap/xsenv": "^3.1.1",
        "debug": "^4.3.2",
        "dotenv": "^10.0"
    },
    "devDependencies": {
        "@types/node": "^16.4.0",
        "chai": "^4.2.0",
        "eslint": "^7.31"
    },
    "scripts": {
        "start": "node test",
        "lint": "./node_modules/.bin/eslint ./lib",
        "lint-local": "./node_modules/.bin/eslint ./lib --output-file=eslint.log.htm --format=html --fix",
        "validate": "npm run lint && npm run test",
        "build": "tsc",
        "types": "npx typescript  --declaration --allowJs --emitDeclarationOnly --outDir @types",
        "prodinstall": "npm install --only=prod"
    },
    "engines": {
        "node": "^12.0.0 || ^14.0.0"
    }
}
